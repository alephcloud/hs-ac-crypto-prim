Name:                ac-crypto-prim
Version:             0.2.0
Synopsis:            Alephcloud Crypto Library
description:
    Twc Crypto Library
Homepage:            https://github.com/alephcloud/hs-ac-crypto-prim
License:             AllRightsReserved
License-file:        LICENSE
Author:              Lars Kuhtz <lars@alephcloud.com>
Maintainer:          lars@alephcloud.com
Copyright:           Copyright (c) 2013, 2014 AlephCloud, Inc.
Category:            Cryptography, AlephCloud
Build-type:          Simple
cabal-version: >=1.10

source-repository head
    type: git
    location: git@github.com:alephcloud/hs-ac-crypto-prim.git

Flag native
  description: build using native code (no openssl, no haste)
  default: True

Flag openssl
  description: build with the openssl library linked in. need to select backend
  default: False

Flag haste
  description: build using haste backend. not currently supported
  default: False

Flag curve25519
  description: add support for curve 25519 DH
  default: True

Flag ed25519
  description: add support for signature with curve25519
  default: True

Flag ecc_openssl
  description: build ECC using openssl
  default: False

Library
  exposed-modules:
      TWC.Crypto.Bn
      TWC.Crypto.Aes
      TWC.Crypto.Ecc
      TWC.Crypto.Ecdsa
      TWC.Crypto.Sha
      TWC.Crypto.Hmac
      TWC.Crypto.Pbkdf2
      TWC.Crypto.ByteArray
      TWC.Crypto.ByteArrayL
      TWC.Crypto.Codec
      TWC.Crypto.Utils
  other-modules:
      TWC.Crypto.Ecc.Key
      TWC.Crypto.Ecc.Ops

  build-depends:
      base >= 4.7 && < 5.0,
      base-unicode-symbols >= 0.2.2.4,
      safe >= 0.3.3,
      bytestring >= 0.10.0.2,
      byteable >= 0.1.1,
      arithmoi >= 0.4.0.3,
      cryptohash >= 0.11.5,
      pbkdf >= 1.1.0.1,
      cipher-aes >= 0.2.5,
      base64-bytestring >= 1.0.0.1,
      base16-bytestring >= 0.1.1.5,
      transformers >= 0.3.0.0,
      mtl,
      crypto-random >= 0.0.7

  default-language: Haskell2010

  ghc-options: -Wall

  if flag(native)
      cpp-options: -DNATIVE
      other-modules: TWC.Crypto.Native
                   , TWC.Crypto.Bn.Native
                   , TWC.Crypto.Aes.Native
                   , TWC.Crypto.Sha.Native
                   , TWC.Crypto.Hmac.Native
                   , TWC.Crypto.Pbkdf2.Native
   if flag(openssl)
     -- link with the C library if openssl is enabled
     if os(mingw32)
       extra-libraries: eay32, ssl32, wsock32
       CC-Options:      -D MINGW32
     else
       extra-libraries: crypto, ssl

     if flag(ecc_openssl)
         cpp-options: -DECC_OPENSSL
         other-modules: TWC.Crypto.Ecc.OpenSSL
                      , TWC.Crypto.Ecc.OpenSSLBind
     else
         cpp-options: -DECC_NATIVE
         other-modules: TWC.Crypto.Ecc.Native
   else
       cpp-options: -DECC_NATIVE
       other-modules: TWC.Crypto.Ecc.Native

   if flag(curve25519)
       other-modules:      Crypto.DH.Curve25519
       c-sources:          cbits/curve25519.c
       include-dirs:       cbits cbits/include
   if flag(ed25519)
       other-modules:      Crypto.Sign.Ed25519
       c-sources:          cbits/ed25519.c
       include-dirs:       cbits cbits/include
